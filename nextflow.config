params {
    // i/o 
    dir = '.'
    out = './results'

    // genome
    genome = null
    gtf = null
    transcriptome = null

    // accessions
    runlist = null

    // info
    help = false
    version = false

    // flags
    trim =  true // trim fastq files with trim_galore; set to false to use trimmomatic
    fqc = false
    mqc = false
}

manifest {
    name            = 'stoseq.nf'
    author          = """Alejandro Gonzales-Irribarren"""
    homePage        = 'https://github.com/alejandrogzi/stoseq'
    description     = """A portable storage-optimized RNA-seq processing pipeline"""
    mainScript      = 'stoseq.nf'
    nextflowVersion = '!>=22.10.1'
    version         = '1.0.0'
    doi             = ''
}


process {
    executor        = 'local'
//    queue           = null
//    clusterOptions  = null
//    time            = 24h
//    queueSize       = 200
//    penv            = 'openmpi'
}
